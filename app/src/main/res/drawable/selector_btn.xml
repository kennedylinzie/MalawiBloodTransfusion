<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="false"
        android:state_pressed="false"
        >
        <shape android:shape="rectangle" >
            <corners
                android:radius="30dp"
                />
            <stroke
                android:width="2px"
                android:color="#ccc"
                />
        </shape>
    </item>

    <item
        android:state_focused="true"
        android:state_pressed="true"
        >
        <shape android:shape="rectangle" >
            <corners
                android:radius="30dp"
                />
            <solid
                android:color="#998cc63f"
                />
            <stroke
                android:width="2px"
                android:color="#ccc"
                />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <corners
                android:radius="30dp"
                />
            <stroke
                android:width="2px"
                android:color="#ccc"
                />
        </shape>
    </item>
</selector>